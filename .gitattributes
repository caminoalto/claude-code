# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh        text eol=lf
*.bash      text eol=lf
*.zsh       text eol=lf

# Windows scripts
*.ps1       text eol=crlf
*.cmd       text eol=crlf
*.bat       text eol=crlf

# Configuration files
*.cfg       text eol=lf
*.conf      text eol=lf
*.config    text eol=lf
*.ini       text eol=lf
*.json      text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.toml      text eol=lf
*.xml       text eol=lf

# Docker
Dockerfile  text eol=lf
.dockerignore text eol=lf

# Git
.gitignore  text eol=lf
.gitattributes text eol=lf

# Documentation
*.md        text eol=lf
*.txt       text eol=lf
README      text eol=lf
LICENSE     text eol=lf
CHANGELOG   text eol=lf

# Source code
*.js        text eol=lf
*.jsx       text eol=lf
*.ts        text eol=lf
*.tsx       text eol=lf
*.py        text eol=lf
*.rb        text eol=lf
*.go        text eol=lf
*.java      text eol=lf
*.c         text eol=lf
*.cpp       text eol=lf
*.h         text eol=lf
*.hpp       text eol=lf
*.rs        text eol=lf
*.php       text eol=lf
*.css       text eol=lf
*.scss      text eol=lf
*.sass      text eol=lf
*.html      text eol=lf
*.vue       text eol=lf

# Binary files
*.jpg       binary
*.jpeg      binary
*.png       binary
*.gif       binary
*.ico       binary
*.svg       text eol=lf
*.pdf       binary
*.zip       binary
*.tar       binary
*.gz        binary
*.exe       binary
*.dll       binary
*.so        binary
*.dylib     binary

# Fonts
*.ttf       binary
*.eot       binary
*.woff      binary
*.woff2     binary

# Specific files
install     text eol=lf
